<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FuelCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/laranja_button</item>
        <item name="colorPrimaryVariant">@color/fundo_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/laranja_button</item>
        <item name="colorSecondaryVariant">@color/laranja_button</item>
        <item name="colorOnSecondary">@color/laranja_button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->

    </style>

    <style name="edt_style" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/laranja_button</item>
        <item name="android:textColorHint">@color/laranja_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tv_entrada_style" parent="Widget.AppCompat.TextView">
        <item name="textInputStyle">@font/font_emibold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnnavview" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/fundo_500</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearanceActive">@color/white</item>
    </style>

    <style name="botaoCalcular" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/botao_calc</item>
        <item name="android:radius">60dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="tv_number" parent="Widget.AppCompat.TextView">
    <item name="textInputStyle">@font/font_emibold</item>
    <item name="android:layout_marginStart">25dp</item>
    <item name="android:textColor">@color/laranja_button</item>
    <item name="android:textSize">25sp</item>
    </style>



</resources>